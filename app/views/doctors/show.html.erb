<h1><%= @doctor.name %>'s Page</h1>
<h3>Department: <%= @doctor.department %></h3>
<h3>Appointments:</h3>
<ou>
  <% @doctor.appointments.each do |a| %>
    <li>
    <%= link_to "#{a.patient.name} - #{a.appointment_datetime.strftime("%B %d, %Y at %H:%M")}", patient_path(a.patient) %>
    </li>
    <% end %>
</ul>
